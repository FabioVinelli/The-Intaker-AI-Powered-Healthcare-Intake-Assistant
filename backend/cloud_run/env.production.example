# Production Environment Variables for The Intaker API
# Copy this file to .env for local development or use these as reference for Cloud Run deployment

# Application Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-here
DEBUG=false

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Secret Manager Configuration
USE_SECRET_MANAGER=true
SECRET_MANAGER_PROJECT_ID=your-project-id

# Database Configuration
FIRESTORE_DATABASE=(default)

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FORMAT=structured

# Security Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=redis://your-redis-url:6379/0
RATELIMIT_DEFAULT=100 per minute
RATELIMIT_API_DEFAULT=100 per minute
RATELIMIT_PHI_ACCESS=10 per minute
RATELIMIT_AUTH=50 per minute
RATELIMIT_HEALTH=200 per minute
RATELIMIT_HEADERS_ENABLED=true

# Performance Configuration
MAX_CONTENT_LENGTH=16777216
REQUEST_TIMEOUT=30
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Cloud KMS Configuration (for PHI encryption)
KMS_PROJECT_ID=your-project-id
KMS_LOCATION=global
KMS_KEY_RING=intaker-phi-keys
KMS_KEY_NAME=phi-encryption-key

# Cloud Storage Configuration
STORAGE_BUCKET_NAME=your-project-id-patient-documents
STORAGE_BUCKET_LOCATION=US

# External Services Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Third-party API Keys (optional)
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Testing Configuration (for testing environment)
TEST_PROJECT_ID=your-test-project-id
DISABLE_AUTH_FOR_TESTING=false 